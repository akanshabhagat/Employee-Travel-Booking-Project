@model IEnumerable<TravelRequest>
<Center><h2>Travel Request List</h2></Center>

<br />
<button class="btn btn-success"><a href="/TravelRequest/AddTravelRequest">Add New Travel Request</a></button>
<br />
<br />

@{
    @if (Model != null)
    {
        <table class="table table-bordered-dark table-sm table-striped table-dark">
            <tr>
                <td>Employee Id</td>
                <td>Request Id</td>
                <td>First Name</td>
                <td>Last Name</td>
                <td>From Location</td>
                <td>To Location</td>
                <td>Request Date</td>
                <td>Approve Status</td>
                <td>Booking Status</td>
                <td>Current Status</td>
                <td>Update</td>
                <td>Delete</td>
                <td>Approve Request</td>
                <td>Book Request</td>
            </tr>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.EmpId</td>
                    <td>@c.RequestId</td>
                    <td>@c.Emp.EmpFirstName</td>
                    <td>@c.Emp.EmpLastName</td>
                    <td>@c.LocFrom</td>
                    <td>@c.LocTo</td>
                    <td>@c.ReqDate</td>
                    <td>@c.ApprovalStatus</td>
                    <td>@c.BookingStatus</td>
                    <td>@c.CurrentStatus</td>

                    @if(c.CurrentStatus != "Close")
                    {
                        <td>
                            <button class="btn btn-success">
                                <a asp-action="UpdateTravelRequest" asp-route-id=@c.RequestId>Update</a>
                            </button>
                        </td>
                    }
                    else
                    {
                        <td>
                            <button class="btn btn-success">
                                <a>Update</a>
                            </button>
                        </td>
                    }

                    @if (c.CurrentStatus != "Close")
                    {
                        <td>
                            <button class="btn btn-danger">
                                <a asp-action="DeleteTravelRequest" asp-route-id=@c.RequestId>Delete</a>
                            </button>
                        </td>
                    }
                    else
                    {
                        <td>
                            <button class="btn btn-danger">
                                <a>Delete</a>
                            </button>
                        </td>
                    }

                    @if (c.ApprovalStatus == "Pending")
                    {
                        <td>
                            <button class="btn btn-info">
                                <a asp-action="ApproveTravelRequest" asp-route-id=@c.RequestId>Approve Request</a>
                            </button>
                        </td>
                    }
                    else
                    {
                        <td>
                            <button class="btn btn-info">
                                <a>Approve Request</a>
                            </button>
                        </td>
                    }



                    @if (c.BookingStatus == "Pending" && c.CurrentStatus == "Open")
                    {
                        <td>
                            <button class="btn btn-info">
                                <a asp-action="BookTravelRequest" asp-route-id=@c.RequestId>Book Request</a>
                            </button>
                        </td>

                    }
                    else if (c.CurrentStatus == "Close")
                    {
                        <td>
                            <button class="btn btn-info">
                                <a>Book Request</a>
                            </button>
                        </td>
                    }
                    else
                    {
                        <td>
                            <button class="btn btn-info">
                                <a>Book Request</a>
                            </button>
                        </td>
                    }



                </tr>
            }
        </table>


    }
    else
    {
        <h3>No Travel Requests to show at this time</h3>
    }
}